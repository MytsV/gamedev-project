{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es2016",

    /* Modules */
    "esModuleInterop": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,
    "skipLibCheck": true,
  },
  "references": [
    {
      "path": "./common",
      "prepend": true,
    }
  ]
}
